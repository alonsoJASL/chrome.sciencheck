{
    "name": "ScienCheck",
    "version": "0.2",
    "manifest_version": 2,
    "description": "Verifies news notes based on scientific accuracy.",
    "content_scripts":[
        {
            "matches": ["<all_urls>"],
            "js": ["javascript/content.js", "javascript/popup.js"],
            "css": ["style.css"], 

            "run_at": "document_end"
        }
    ],
    "browser_action": {
        "default_title": "ScienCheck",
        "default_icon": "icon_16x16.png",
        "default_popup": "popup.html"
    },
    "background": {
      "persistent": false,
      "scripts": ["javascript/background.js"]
    },
    "permissions": ["tabs"],
    "icons": {
        "16" : "icon_16x16.png",
        "32" : "icon_32x32.png",
        "48" : "icon_48x48.png",
        "128" : "icon_128x128.png"
    }
  }
